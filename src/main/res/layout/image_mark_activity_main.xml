<LinearLayout
    android:id="@+id/main_frgment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:orientation="vertical">

    <include layout="@layout/image_mark_title_bar"/>

    <ViewAnimator
        android:id="@+id/ViewAnimator_imagePick_activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progressBar_imagePick_activity_main"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="90dp"
            />

        <FrameLayout
            android:id="@+id/container_fl_imagePick_activity_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        </FrameLayout>
    </ViewAnimator>


</LinearLayout>
