<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <com.cardapp.utils.widget.HandWrite
            android:id="@+id/hand_write_imageMark_fragment_edit_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

        <LinearLayout
            android:id="@+id/click2EditLl_imageMark_fragment_edit_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/click2EditBtn_imageMark_fragment_edit_image"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/image_mark_edit_picture_shape"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/imageMark_Click_start_to_use_the_brush"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="13sp" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20dp">

        <LinearLayout
            android:id="@+id/previous_step_imageMark_fragment_edit_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/image_mark_left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_5"
                android:background="#77000000"
                android:text="@string/Undo"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dp_20" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/next_step_imageMark_fragment_edit_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/image_mark_right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_5"
                android:background="#77000000"
                android:text="@string/redo"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dp_20" />

        </LinearLayout>

    </RelativeLayout>

